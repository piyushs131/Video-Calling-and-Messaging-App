<!DOCTYPE html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <title>Mulaqat</title>
  <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>
  <script>
    const ROOM_ID = "<%= roomId %>";
    const username = localStorage.getItem('name');
  </script>
  <script src="https://unpkg.com/peerjs@1.2.0/dist/peerjs.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
  <link rel="stylesheet" type="text/css" href="/room.css">
</head>
<body>
  <div class="header">
    <div class="logo">
      <div class="header__back">
        <i class="fas fa-angle-left"></i>
      </div>
      <h3>Mulaqat</h2>
    </div>
  </div>  
  <div class="main">  
  <div class="main__left">
    <div class="videos__group">
      <div id="video-grid">
      </div>
    </div>
    <div class="options">
      <div class="options__left">
        <div id="stopVideo" class="options__button">
          <i class="fa fa-video-camera"></i>
        </div>
        <div id="muteButton" class="options__button">
          <i class="fa fa-microphone"></i>
        </div>
        <div id="endCall" class="options__button">
          <i class="fas fa-phone-slash"></i>
        </div>
        <div id="showChat" class="options__button">
          <i class="fa fa-comment"></i>
        </div>
        <div id="showLocation" class="options__button">
          <i class="fas fa-street-view" style="font-size:x-large;"></i>
        </div>
        <div id="inviteButton" class="options__button">
          <i class="fas fa-user-plus"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="main__right">
    <div class="main__chat_window">
        <div class="messages">
        </div>
    </div>
    <div class="main__message_container">
      <div class="message__container">
        <input id="chat_message" type="text" autocomplete="off" placeholder="Type message here...">
        <div id="speech" >
          <i class="fa fa-microphone"></i>
        </div>
      </div>
      <div id="send" class="options__button send-button">
        <i  id="speech"class="far fa-paper-plane" aria-hidden="true"></i>
      </div>
    </div>
  </div>
  </div>
  <script src="/socket.io/socket.io.js" ></script>
  <script src="/room.js"></script>
  </body>
</html>